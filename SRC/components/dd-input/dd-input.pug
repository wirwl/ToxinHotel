mixin dd-input(data)
  - if (data.hasDatepicker===undefined) data.hasDatepicker=true
  .dd-input
    if data.caption
      label.dd-input__caption(for=data.id) #{data.caption}
    .dd-input__wrapper
      input.dd-input__input(value=data.value 
                            id=data.id type=data.type 
                            placeholder=data.placeholder
                            class=(data.hasDatepicker ? 'toxin-datepicker' :''))