include ../logo/logo
include ../header-menu/header-menu
include ../button-filled/button-filled
include ../button-bordered/button-bordered

mixin header(data)
  -
    const {
      isAuth, logo_path, login = "Login", menu, 
      reg = "Register", name = "Cosmin Negoita", 
      isHeader, buttonSignIn, buttonSignUp
    } = data
  header.header
    .header__wrapper
      h1.header__main-header Бронирование номера в отеле
      .header__logo
        +logo({pathImg: logo_path, pathUrl: "landing.html"})
      .header__menu-and-auth-area
        .header__header-menu
          +header-menu(menu)    
        .header__auth-area(class = isAuth && "header__auth-area_is-auth")
          if !isAuth
            .header__button-bordered(class = isAuth && "header__button-bordered_hide")
              +button-bordered(buttonSignIn)      
            .header__button-filled(class = isAuth && "header__button-filled_hide")              
              +button-filled(buttonSignUp)
        a.header__auth-name(href = "/mock-address/change-me" class = isAuth && "header__auth-name_show") #{name}
    .header__icon.js-header__icon menu