mixin room-info-caption({caption="№", number, isLux, costValue, costText="в сутки"})
  .room-info-caption
    .room-info-caption__caption-left-part
      span.room-info-caption__caption-n #{caption}
      span.room-info-caption__caption-room-number #{number}
      span.room-info-caption__room-type #{(isLux ? "Люкс" : "")}         
    .room-info-caption__cost-per-day
      span.room-info-caption__cost-per-day-value #{costValue}₽
      span.room-info-caption__cost-per-day-text #{costText}