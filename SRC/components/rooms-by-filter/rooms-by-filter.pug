include ../pagination/pagination
include ../room-info/room-info

mixin rooms-by-filter({title="Title", roomInfos=[], pagination}={})
  section.rooms
    h2.rooms__title #{title}
    ul.rooms__list
      for roomInfo in roomInfos
        li.rooms__item
          +room-info(roomInfo)
    .rooms__wrapper-pagination
      +pagination(pagination)