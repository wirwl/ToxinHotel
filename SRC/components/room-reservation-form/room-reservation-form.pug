include ../button-arrow/button-arrow
include ../text-input/text-input
include ../datepicker-input/datepicker-input
include ../guests-input/guests-input

mixin room-reservation-form(data)
  form.room-reservation-form(method="post" action="pages/search-room/sr.html")
    fieldset.room-reservation-form__wrapper-for-inputs
      legend.room-reservation-form__title Найдём номера под ваши пожелания
      ul.room-reservation-form__list(role="none presentation")    
        li.room-reservation-form__item
          fieldset.room-reservation-form__wrapper-for-dates
            ul.room-reservation-form__dates-list(role="none presentation")
              li.room-reservation-form__dates-item
                +datepicker-input({caption:"Прибытие", placeholder:"ДД.ММ.ГГГГ",id:"rr-form__start-input"})
              li.room-reservation-form__dates-item
                +datepicker-input({caption:"Выезд", placeholder:"ДД.ММ.ГГГГ", id:"rr-form__end-input", hasDatepicker:false})                  
        li.room-reservation-form__item.room-reservation-wrapper-guests-input
          +guests-input({caption:"Гости", 
            iqdd:{isExpanded:false, placeholder:"", 
            items:[{id:"adults", name:"ВЗРОСЛЫЕ"},
              {id:"childs", name:"ДЕТИ"},
              {id:"babies", name:"МЛАДЕНЦЫ"}] }})
      +button-arrow({text:"Подобрать номер", type: "submit"})