include ../button/button
include ../text-input/text-input
include ../datepicker-input-range/datepicker-input-range
include ../guests-input/guests-input

mixin room-reservation-form(data={})
  -
    const {
      title="Title", 
      datepickers,      
      guestsInput, 
      buttonFindRoom
    } = data
  form.room-reservation-form(method = "get" action = "search-room.html")    
    fieldset.room-reservation-form__wrapper-for-inputs
      h2.room-reservation-form__title #{title}
      ul.room-reservation-form__list(role = "none presentation")    
        li.room-reservation-form__item
          fieldset.room-reservation-form__wrapper-for-dates
            +datepicker-input-range(datepickers)               
        li.room-reservation-form__item.room-reservation-form__guests-input
          +guests-input(guestsInput)
      +button({styleType:"arrowed", type: "submit", text: buttonFindRoom.text})