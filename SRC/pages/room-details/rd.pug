doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    title О номере
    +favicon    
    link(href="rd.css" rel="stylesheet")
  body        
    +header({login:'Войти', reg:'Зарегистрироваться', isAuth:false, 
                          menu: [{text:'О нас', link:'#'},
                                {text:'Услуги', link: '#', 
                                  sm:[
                                    {text:'Пунтк21', link: '#'},
