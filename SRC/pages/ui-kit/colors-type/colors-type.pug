include ../../../components/color-example/color-example
include ../../../components/font-example/font-example
include ../../../common

doctype html
html(lang="en")
  head
    +meta-tags({description:"UIKit: colors & type", keywords:"uikit, colors, type"})    
    title Colors & Type
    +favicon({path:"../../../"})
    link(href="colors-type.css" rel="stylesheet")
  body
    .color-example__wrapper
      +color-example({color:"color-example__squareColor_DS100", desc:"Dark Shade 100%", hex: "#1F2041"})
      +color-example({color:"color-example__squareColor_DS75", desc:"Dark Shade 75%", hex: "#1F2041"})
      +color-example({color:"color-example__squareColor_DS50", desc:"Dark Shade 50%", hex: "#1F2041"})
      +color-example({color:"color-example__squareColor_DS25", desc:"Dark Shade 25%", hex: "#1F2041"})
      +color-example({color:"color-example__squareColor_DS5", desc:"Dark Shade 5%",  hex:"#1F2041"})
      +color-example({color:"color-example__squareColor_Purple", desc:"Purple", hex: "#BC9CFF"})
      +color-example({color:"color-example__squareColor_Green", desc:"Green", hex: "#6FCF97"})
    .font-example__wrapper
      +font-example({type: "font-example_header_one", title: "H1", desc: "This one is the sub-section or widget title"})
      +font-example({type: "font-example_header_two", title: "H2", desc: "Next one is the item title inside widgets"})
      +font-example({type: "font-example_header_three", title: "H3", desc: "THIS IS A LABEL OR CTA TEXT"})
      +font-example({type: "font-example_body", title: "Body", desc: "This is the body text which is used for most of the design, like paragraphs, lists, etc"})
    script(type="text/javascript" src="colors-type.js")