include ../../../components/toggle/toggle
include ../../../components/checkboxes-list/checkboxes-list
include ../../../components/radios-list/radios-list
include ../../../components/toggles-list/toggles-list
include ../../../components/like-button/like-button
include ../../../components/rate-button/rate-button
