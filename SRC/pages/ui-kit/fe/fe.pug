include ../../../components/text-input/text-input
include ../../../components/dropdown-input/dropdown-input
include ../../../components/masked-input/masked-input
include ../../../components/dd-input/dd-input
include ../../../components/fdd-input/fdd-input
include ../../../components/subscribe-input/subscribe-input
include ../../../components/comfort-input/comfort-input
include ../../../components/expandable-checkbox-list/expandable-checkbox-list
include ../../../components/checkbox/checkbox
include ../../../components/comfort-status/comfort-status
include ../../../components/radio/radio
include ../../../components/toggle/toggle
include ../../../components/checkboxes-list/checkboxes-list
include ../../../components/radios-list/radios-list
doctype html
html
  head
    meta(charset="UTF-8")
    title Form Elements
    link(href='../../../jquery/plugins/item-quantity-dropdown/item-quantity-dropdown.min.css' rel='stylesheet')
  body
    .column1
      ul.column1__list
        li.column1__item
          +text-input({caption:'TEXT FIELD', placeholder:'Email', type: 'email'})
        li.column1__item
          +text-input({classes:'text-input_isFocused', caption:'TEXT FIELD', placeholder:'Email', type: 'email', text:'This is pretty awesome'})     
        li.column1__item
          +dropdown-input({caption:'DROPDOWN', placeholder:'Сколько гостей', type:'text'})  
        li.column1__item
          +masked-input({caption:'MASKED TEXT FIELD', placeholder:'ДД.ММ.ГГГГ'})
        li.column1__item.column1__wrapper-for-dd-input
          +dd-input({caption:'DATE DROPDOWN', placeholder:'ДД.ММ.ГГГГ', value:''})
          +dd-input({caption:'DATE DROPDOWN', placeholder:'ДД.ММ.ГГГГ', value:'19.08.2019'})
        li.column1__item.column1__wrapper-for-fdd-input
          +fdd-input({caption:'FILTER DATE DROPDOWN', placeholder:'', value:'19 авг - 23 авг'})
        li.column1__item.column1__wrapper-for-subscribe-input
          +subscribe-input({caption:'SUBSCRIPTION TEXT FIELD', placeholder:'Email', type:'email'})
        li.column1__item
          +comfort-input({isExpanded:false, caption:'DROPDOWN', placeholder:'', value:'2 спальни, 2 кровати...'})
        li.column1__item.column1__wrapper-for-comport-input
          +comfort-input({isExpanded:true, caption:'DROPDOWN', placeholder:'', value:'2 спальни, 2 кровати...'})
        li.column1__item.column1__wrapper-for-ecl1
          +expandable-checkbox-list({isExpand:false, caption:'EXPANDABLE CHECKBOX LIST', checkboxes:[{text:'Завтрак'},
                                                                                     {text:'Писменный стол', isChecked:true},
                                                                                     {text:'Стул для кормления', isChecked:true},
                                                                                     {text:'Кроватка', isChecked:true},
                                                                                     {text:'Телевизор'},
                                                                                     {text:'Шампунь'},
                                                                                     {text:'Телевизор'},
                                                                                     {text:'Шампунь'}
                                                                                     ]})
        li.column1__item                                                            
          +expandable-checkbox-list({isExpand:true, caption:'EXPANDABLE CHECKBOX LIST', checkboxes:[{text:'Завтрак'},
                                                                                     {text:'Писменный стол', isChecked:true},
                                                                                     {text:'Стул для кормления', isChecked:true},
                                                                                     {text:'Кроватка', isChecked:true},
                                                                                     {text:'Телевизор'},
                                                                                     {text:'Шампунь'},
                                                                                     {text:'Телевизор'},
                                                                                     {text:'Шампунь'}          
                                                                                     ]})
        li.column1__item
          +comfort-status({src:'../../../images/home.png', caption:'Комфорт', text:'Шумопоглощающие стены'})
          +comfort-status({src:'../../../images/smile.png', caption:'Удобство', text:'Окно в каждой из спален'})
    .column2
      ul.column2__list
        li.column2__item.column2__wrapper-for-checkboxes-list
          +checkboxes-list({caption:'CHECKBOX BUTTONS', checkboxes:[{text:'Можно курить'},
                                                                  {text:'Можно с питомцами', isChecked:true},
                                                                  {text:'Можно пригласить гостей (до 10 человек)',isChecked:true}
                                                                 ]})               
        li.column2__item.column2__wrapper-for-radios-list
          +radios-list({setSelecton:0,caption:'RADIO BUTTONS', name:'sex', radios:[{text:'Мужчина'},
                                                                     {text:'Женщина'}
                                                                    ]})
        li.column2__item
          ul.toggle-list
            p.column2__caption.column2__wrapper-for-toggle-lists TOGGLE
            li.toggle-list__item
              +toggle({isChecked:true, text:'Получать спецппредложения'})
            li.toggle-list__item
              +toggle({isChecked:false, text:'Получать спецпредложения'})

    .column3
    script(type="text/javascript" src="../../../jquery/jquery-3.4.1.min.js")
    script(type="text/javascript" src="../../../jquery/plugins/jquery.maskedinput.min.js")
    script(type="text/javascript" src='../../../jquery/plugins/item-quantity-dropdown/item-quantity-dropdown.min.js')
